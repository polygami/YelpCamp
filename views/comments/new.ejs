<% include ../partials/header.ejs %>


<div class="container">
	<div class="row">



		
		<h1 class="text-center">Add a New Comment to <%= campground.name %></h1>
		<div class="campground-form">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control form-group" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block form-group" type="submit">
				</div>

			</form>
			<a href="/campgrounds">Go Back</a>
		</div>



	</div>
</div>
