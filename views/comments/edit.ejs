<% include ../partials/header.ejs %>

<div class="container">
	<div class="row">

		<h1 class="text-center">Edit Comment %></h1>
		<div class="campground-form">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control form-group" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block form-group" type="submit">
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

